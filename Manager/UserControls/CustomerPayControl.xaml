<UserControl x:Class="Manager.UserControls.CustomerPayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manager.UserControls"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
        <telerik:RadDateTimePicker Width="190" Height="30"
                            Margin="10,0,10,0" StartTime="05:30" EndTime="18:00" TimeInterval="0:15"
                            SelectedValue="{Binding PayTime, UpdateSourceTrigger=PropertyChanged}" 
                            BorderBrush="{telerik:Office2013Resource ResourceKey=AccentMainBrush}"></telerik:RadDateTimePicker>


        <TextBox 
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Margin="5,5,5,5" 
                Text="{Binding Amount, StringFormat='0,0',UpdateSourceTrigger=PropertyChanged}" 
                materialDesign:HintAssist.Hint="Khách trả" 
                BorderBrush="{telerik:Office2013Resource ResourceKey=AccentMainBrush}"/>
    </StackPanel>
</UserControl>
